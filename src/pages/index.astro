---

import Layout from '../layouts/Layout.astro';
import portrait01 from '../images/portrait-01.jpeg';
import portrait02 from '../images/portrait-02.jpeg';
import portrait03 from '../images/portrait-03.jpeg';
import portrait04 from '../images/portrait-04.jpeg';

---

<Layout title="Cátia Malinina | Oustanding portraits for oustanding peoples">
	<main class="main">
		<section class="h-screen flex flex-col justify-center text-center">
			<slider class="slider relative w-full">
				<div class="absolute w-full z-10 my-20">
					<div class="socials-links w-full flex justify-around items-center">
						<p class="text-xs leading-none font-didot"><i>at</i> Lisbon,<br>Portugal</p>
						<a href="https://www.instagram.com/catiamalinina/" target="_blank">
							<svg class="w-6 h-6" fill="currentColor" id="instagram" data-name="instagram" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><path d="M295.42,6c-53.2,2.51-89.53,11-121.29,23.48-32.87,12.81-60.73,30-88.45,57.82S40.89,143,28.17,175.92c-12.31,31.83-20.65,68.19-23,121.42S2.3,367.68,2.56,503.46,3.42,656.26,6,709.6c2.54,53.19,11,89.51,23.48,121.28,12.83,32.87,30,60.72,57.83,88.45S143,964.09,176,976.83c31.8,12.29,68.17,20.67,121.39,23s70.35,2.87,206.09,2.61,152.83-.86,206.16-3.39S799.1,988,830.88,975.58c32.87-12.86,60.74-30,88.45-57.84S964.1,862,976.81,829.06c12.32-31.8,20.69-68.17,23-121.35,2.33-53.37,2.88-70.41,2.62-206.17s-.87-152.78-3.4-206.1-11-89.53-23.47-121.32c-12.85-32.87-30-60.7-57.82-88.45S862,40.87,829.07,28.19c-31.82-12.31-68.17-20.7-121.39-23S637.33,2.3,501.54,2.56,348.75,3.4,295.42,6m5.84,903.88c-48.75-2.12-75.22-10.22-92.86-17-23.36-9-40-19.88-57.58-37.29s-28.38-34.11-37.5-57.42c-6.85-17.64-15.1-44.08-17.38-92.83-2.48-52.69-3-68.51-3.29-202s.22-149.29,2.53-202c2.08-48.71,10.23-75.21,17-92.84,9-23.39,19.84-40,37.29-57.57s34.1-28.39,57.43-37.51c17.62-6.88,44.06-15.06,92.79-17.38,52.73-2.5,68.53-3,202-3.29s149.31.21,202.06,2.53c48.71,2.12,75.22,10.19,92.83,17,23.37,9,40,19.81,57.57,37.29s28.4,34.07,37.52,57.45c6.89,17.57,15.07,44,17.37,92.76,2.51,52.73,3.08,68.54,3.32,202s-.23,149.31-2.54,202c-2.13,48.75-10.21,75.23-17,92.89-9,23.35-19.85,40-37.31,57.56s-34.09,28.38-57.43,37.5c-17.6,6.87-44.07,15.07-92.76,17.39-52.73,2.48-68.53,3-202.05,3.29s-149.27-.25-202-2.53m407.6-674.61a60,60,0,1,0,59.88-60.1,60,60,0,0,0-59.88,60.1M245.77,503c.28,141.8,115.44,256.49,257.21,256.22S759.52,643.8,759.25,502,643.79,245.48,502,245.76,245.5,361.22,245.77,503m90.06-.18a166.67,166.67,0,1,1,167,166.34,166.65,166.65,0,0,1-167-166.34" transform="translate(-2.5 -2.5)"/></svg>
						</a>
					</div>
				</div>
				<div class="container-box absolute w-full h-full flex justify-center items-center -z-20">
						<div class="photo-slider h-28 flex justify-center items-start relative">
							<div class="photo-container h-full overflow-hidden aspect-3/4 shadow-zinc-700 shadow-2xl">
								<img class="portrait-01 absolute object-cover object-center" src={portrait01} alt="Portrait">
								<img class="portrait-02 absolute object-cover object-center" src={portrait02} alt="Portrait">
								<img class="portrait-03 absolute object-cover object-center" src={portrait03} alt="Portrait">
								<img class="portrait-04 absolute object-cover object-center" src={portrait04} alt="Portrait">
							</div>
						</div>
				</div>
				<div class="text-8xl sm:text-9xl leading-[0.85] sm:leading-[0.85] font-lato uppercase mb-16 mt-4 relative">
					<wrapper class="section-01">
						<div class="left-fly font-bold text-transparent bg-gradient-to-t from-zinc-950 to-zinc-700 bg-clip-text">Your</div>
						<div class="right-fly font-didot mt-3 text-transparent bg-gradient-to-t from-zinc-950 to-zinc-700 bg-clip-text">Face Is</div>
						<div class="left-fly font-bold text-transparent bg-gradient-to-t from-zinc-950 to-zinc-700 bg-clip-text">Your</div>
						<div class="right-fly font-didot mt-3 text-transparent bg-gradient-to-t from-zinc-950 to-zinc-700 bg-clip-text">Brand</div>
					</wrapper>
					<wrapper class="section-02">
						<div class="absolute top-1/3 mt-32 w-full flex flex-col justify-center">
							<p class="text-3xl sm:text-4xl leading-none block">
								<span class="font-lato font-black">Make an</span><br>
								<span class="font-didot">Extraordinary</span><br>
								<span class="font-lato font-black">first impression</span>
							</p>
					</div>
					</wrapper>
					<wrapper class="section-03">
						<div class="absolute top-1/3 mt-20 w-full flex flex-col justify-center">
							<p class="text-3xl sm:text-4xl leading-none block">
								<span class="font-lato font-black">Cátia Malinina</span><br>
								<span class="font-didot">Oustanding portraits</span><br>
								<span class="font-lato font-black">for outstanding people</span>
							</p>
							<p class="text-lg font-didot my-8 leading-tight capitalize">
								Make yourself remarkable<br>with a modern artistic headshot
							</p>
							<div class="button-container z-30 w-full flex justify-center capitalize">
								<a href="mailto:hello@catiamalinina.com" class="py-2 px-4 font-didot text-base text-white shadow-zinc-600 shadow-xl bg-gradient-to-t to-zinc-800 from-zinc-900 rounded hover:-translate-y-0.5 duration-150 relative z-10 border border-zinc-950">
									Book Your Photo Session
								</a>
							</div>
					</div>
					</wrapper>
				</div>
				<div class="scroll-to-explore absolute w-full flex flex-col justify-center">
					<p class="font-didot capitalize">Scroll to explore</p>
					<div class="flex w-full justify-center">
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 673 359" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M665.946 38.2133L352.346 351.813C347.862 356.293 342.638 358.532 336.664 358.532C330.689 358.532 325.466 356.293 320.981 351.813L7.38091 38.2133C-1.57749 29.2549 -1.57749 15.068 7.38091 6.85332C16.3393 -2.10508 30.5262 -2.10508 38.7409 6.85332L336.661 304.773L634.581 6.85332C643.539 -2.10508 657.726 -2.10508 665.941 6.85332C674.899 15.8169 674.899 29.26 665.941 38.2173L665.946 38.2133Z" fill="black"/>
						</svg>
					</div>
				</div>
			</slider>
		</section>
		<section class="h-screen flex flex-col justify-center text-center">

		</section>
	</main>

	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/gsap.min.js"></script>
	<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.5/ScrollTrigger.min.js"></script>

	<script>
		gsap.registerPlugin(ScrollTrigger);

		let mainFilm = gsap.timeline({
			scrollTrigger: {
			trigger: ".main",
			pin: ".slider",
			markers: false,
			start: "top top",
			end: "bottom bottom-=1px",
			scrub: true,
			}
		});

		mainFilm.addLabel("start")
			.set(".section-02, .section-03", {autoAlpha:0}, "start")
			.set(".portrait-02, .portrait-03, .portrait-04", {autoAlpha:0}, "start")
			.to(".photo-slider, .photo-container", {height:'100%', duration:10}, "start")
			.to(".scroll-to-explore", {autoAlpha:0, duration:10}, "start")
			.to(".left-fly", {x:'-100vw', duration:10}, "start")
			.to(".right-fly", {x:'100vw', duration:10}, "start")
			.set(".portrait-01", {autoAlpha:0}, ">+=20")
			.set(".portrait-02", {autoAlpha:1}, "<")
			.set(".portrait-02", {autoAlpha:0}, ">+=20")
			.set(".portrait-03", {autoAlpha:1}, "<")
			.set(".portrait-03", {autoAlpha:0}, ">+=20")
			.set(".portrait-04", {autoAlpha:1}, "<")
			.to(".photo-container", {height:'9rem', duration:10}, ">+=20")
			.from(".section-02", {autoAlpha:0, duration:10}, "<")
			.to(".section-02", {autoAlpha:0, duration:10})
			.from(".section-03", {autoAlpha:0, duration:10})
			.from(".socials-links", {autoAlpha:0, duration:5}, "<")
	</script>
</Layout>

